{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start Server",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "restart": true,
            "runtimeArgs": ["--inspect"],
            "program": "${workspaceFolder}/server.js",
            "env": {
                "NODE_ENV": "development"
            }
        }
    ]
}